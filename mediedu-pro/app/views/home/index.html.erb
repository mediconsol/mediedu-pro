<!-- Recent Quizzes Section -->
<div class="bg-gradient-to-b from-gray-50 to-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-blue-100 text-blue-700 text-sm font-medium mb-4">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
        </svg>
        인기 퀴즈
      </div>
      <h2 class="text-4xl font-bold text-gray-900 mb-4">최근 퀴즈</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">AI가 생성한 의료 전문 퀴즈로 실력을 향상시켜보세요</p>
    </div>
    
    <% if @recent_quizzes.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @recent_quizzes.each_with_index do |quiz, index| %>
          <div class="group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 p-8 border border-gray-100 hover:border-blue-200 transform hover:-translate-y-1">
            <!-- Quiz rank badge -->
            <div class="absolute -top-3 -right-3 w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
              <span class="text-white text-sm font-bold"><%= index + 1 %></span>
            </div>
            
            <div class="flex justify-between items-start mb-6">
              <h3 class="text-xl font-bold text-gray-900 line-clamp-2 group-hover:text-blue-600 transition-colors duration-200">
                <%= quiz.title %>
              </h3>
              <span class="px-3 py-1 rounded-full text-xs font-semibold 
                         <%= case quiz.difficulty
                             when 'beginner' then 'bg-green-100 text-green-700 border border-green-200'
                             when 'intermediate' then 'bg-yellow-100 text-yellow-700 border border-yellow-200'  
                             when 'advanced' then 'bg-red-100 text-red-700 border border-red-200'
                             else 'bg-blue-100 text-blue-700 border border-blue-200'
                             end %>">
                <%= quiz.difficulty&.humanize || '기본' %>
              </span>
            </div>
            
            <p class="text-gray-600 mb-6 line-clamp-3 leading-relaxed">
              <%= quiz.description %>
            </p>
            
            <div class="flex justify-between items-center mb-6 text-sm">
              <div class="flex items-center text-gray-500">
                <svg class="w-4 h-4 mr-2 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="font-medium"><%= JSON.parse(quiz.questions_data).length %> 문항</span>
              </div>
              
              <div class="flex items-center text-gray-500">
                <svg class="w-4 h-4 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
                </svg>
                <span class="font-medium"><%= quiz.document.category.humanize %></span>
              </div>
            </div>
            
            <div class="flex justify-between items-center">
              <%= link_to quiz_path(quiz), 
                  class: "group inline-flex items-center px-6 py-3 rounded-xl bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold hover:from-blue-700 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl" do %>
                <span>시작하기</span>
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"/>
                </svg>
              <% end %>
              
              <div class="text-right">
                <div class="text-sm font-semibold text-gray-900"><%= quiz.quiz_attempts.count %></div>
                <div class="text-xs text-gray-500">도전자</div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="text-center mt-16">
        <%= link_to quizzes_path, 
            class: "inline-flex items-center px-8 py-4 rounded-full bg-gray-900 text-white font-semibold hover:bg-gray-800 transition-all duration-200 shadow-lg hover:shadow-xl" do %>
          <span>모든 퀴즈 보기</span>
          <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"/>
          </svg>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <div class="w-24 h-24 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">아직 퀴즈가 없습니다</h3>
        <p class="text-lg text-gray-600 mb-8 max-w-md mx-auto">
          의료 문서를 업로드하면 AI가 자동으로 맞춤형 퀴즈를 생성해드립니다.
        </p>
        <%= link_to new_document_path, 
            class: "inline-flex items-center px-8 py-4 rounded-full bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold hover:from-blue-700 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          <span>첫 문서 업로드하기</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

